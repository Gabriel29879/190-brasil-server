{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./dist",
    "lib": ["ES6", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@integrations/*": ["src/infrastructure/integrations/*"],
      "@services/*": ["src/services/*"],
      "@listeners/*": ["src/infrastructure/listeners/*"],
      "@routes/*": ["src/routes/*"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"],
      "@config/*": ["src/config/*"],
      "@domain/*": ["src/domain/*"],
      "@databaseStates/*": ["test/databaseStates/*"],
      "@testUtils/*": ["test/utils/*"]
    }
  },
  "include": ["src", "test"]
}
